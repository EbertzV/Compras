<Window x:Class="Compras.Desktop.Compras.ListaCompras"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compras.Desktop.Compras"
        mc:Ignorable="d"
        Title="Compras" Height="450" Width="800">
    <Grid Background="#FFB0B0B0">
            <DockPanel LastChildFill="False">
                <Menu DockPanel.Dock="Top" Background="#FFA6A6A6" Height="27">
                    <MenuItem Header="_Arquivo" Height="28" Width="70">
                        <MenuItem Header="_Sair"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Compras" Width="84">
                        <MenuItem Header="_Nova compra"></MenuItem>
                        <MenuItem Header="_Listar compras"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Ajuda">

                    </MenuItem>
                </Menu>
            <Label Content="Lista de compras efetuadas" DockPanel.Dock="Top" Height="27"/>
            <DataGrid x:Name="DG_Lista_Compras" DockPanel.Dock="Top" Height="144"/>
        </DockPanel>
    </Grid>
</Window>
